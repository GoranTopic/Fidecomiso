<Page x:Class="fidecomiso2.Password"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fidecomiso2"
       xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Password">

    <Grid Background="White">
        <StackPanel Orientation="Vertical">
            <Image x:Name="image1"  Height="300" Width="700" Margin="20"/>
            <PasswordBox x:Name="pswdBox" Width="150"/>
            <Label x:Name = "statusText" Foreground="Red" HorizontalAlignment="Center"/>
            <Button Content = "Entrar"  Click = "Button_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
